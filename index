        let currentScene = 1;
        let autoPlayInterval = null;
        let isAutoPlaying = false;

        const sceneContainer = document.getElementById('sceneContainer');
        const prevBtn = document.getElementById('prevBtn');
        const nextBtn = document.getElementById('nextBtn');
        const autoPlayBtn = document.getElementById('autoPlayBtn');
        const resetBtn = document.getElementById('resetBtn');
        const progressBar = document.getElementById('progressBar');
        const currentSceneSpan = document.getElementById('currentScene');
        const progressText = document.getElementById('progressText');
        const sceneDots = document.querySelectorAll('.scene-dot');

        function updateScene(sceneNumber) {
            currentScene = sceneNumber;
            
            // Update content with fade effect
            sceneContainer.style.opacity = '0';
            setTimeout(() => {
                sceneContainer.innerHTML = storyboard[sceneNumber - 1].visual;
                sceneContainer.style.opacity = '1';
            }, 300);

            // Update progress
            const progress = (sceneNumber / 8) * 100;
            progressBar.style.width = progress + '%';
            currentSceneSpan.textContent = sceneNumber;
            progressText.textContent = Math.round(progress) + '% selesai';

            // Update navigation buttons
            prevBtn.disabled = sceneNumber === 1;
            prevBtn.className = sceneNumber === 1 
                ? 'bg-gray-300 text-gray-500 px-6 py-3 rounded-lg font-medium cursor-not-allowed'
                : 'bg-gray-500 hover:bg-gray-600 text-white px-6 py-3 rounded-lg font-medium transition-colors';

            nextBtn.disabled = sceneNumber === 8;
            nextBtn.className = sceneNumber === 8
                ? 'bg-gray-300 text-gray-500 px-6 py-3 rounded-lg font-medium cursor-not-allowed'
                : 'bg-blue-500 hover:bg-blue-600 text-white px-6 py-3 rounded-lg font-medium transition-colors';

            // Update scene dots
            sceneDots.forEach((dot, index) => {
                dot.className = index + 1 === sceneNumber
                    ? 'scene-dot w-3 h-3 rounded-full bg-blue-500'
                    : 'scene-dot w-3 h-3 rounded-full bg-gray-300';
            });
        }

        function nextScene() {
            if (currentScene < 8) {
                updateScene(currentScene + 1);
            } else if (isAutoPlaying) {
                updateScene(1); // Loop back to first scene in auto-play
            }
        }

        function prevScene() {
            if (currentScene > 1) {
                updateScene(currentScene - 1);
            }
        }

        function toggleAutoPlay() {
            if (isAutoPlaying) {
                clearInterval(autoPlayInterval);
                autoPlayBtn.innerHTML = '▶ Main Automatik';
                autoPlayBtn.className = 'bg-green-500 hover:bg-green-600 text-white px-6 py-2 rounded-lg font-medium transition-colors mr-4';
                isAutoPlaying = false;
            } else {
                autoPlayInterval = setInterval(nextScene, 5000);
                autoPlayBtn.innerHTML = '⏸ Berhenti';
                autoPlayBtn.className = 'bg-red-500 hover:bg-red-600 text-white px-6 py-2 rounded-lg font-medium transition-colors mr-4';
                isAutoPlaying = true;
            }
        }

        function resetPresentation() {
            if (isAutoPlaying) {
                toggleAutoPlay();
            }
            updateScene(1);
        }

        // Event listeners
        nextBtn.addEventListener('click', nextScene);
        prevBtn.addEventListener('click', prevScene);
        autoPlayBtn.addEventListener('click', toggleAutoPlay);
        resetBtn.addEventListener('click', resetPresentation);

        // Scene dot navigation
        sceneDots.forEach((dot, index) => {
            dot.addEventListener('click', () => {
                updateScene(index + 1);
            });
        });

        // Keyboard navigation
        document.addEventListener('keydown', (e) => {
            if (e.key === 'ArrowRight' && currentScene < 8) {
                nextScene();
            } else if (e.key === 'ArrowLeft' && currentScene > 1) {
                prevScene();
            } else if (e.key === ' ') {
                e.preventDefault();
                toggleAutoPlay();
            } else if (e.key === 'Home') {
                e.preventDefault();
                resetPresentation();
            }
        });

        // Initialize first scene
        updateScene(1);
    </script>
